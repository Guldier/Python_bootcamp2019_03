i = 1
srednia = 0
temperatura = 0
komenda = ""
while True:
    komenda = input(f"Podaj temperature_{i}: ")
    if komenda == "k":
        break
    else:
        try:
            temperatura += int(komenda)
            i += 1
        except:
            print("Nieprawodlowa temperatura")

srednia = temperatura / (i - 1)
print("Åšrednia z tygodnia: ", srednia, "\u00b0C")
